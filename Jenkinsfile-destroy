pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('aws-creds').username
        AWS_SECRET_ACCESS_KEY = credentials('aws-creds').password
        AWS_DEFAULT_REGION    = "ap-south-1"
    }

    stages {

        stage('Init') {
            steps {
                sh 'terraform init'
            }
        }

        stage('Destroy') {
            steps {
                sh 'terraform destroy -auto-approve'
            }
        }

    } // stages ending
} // pipeline ending
