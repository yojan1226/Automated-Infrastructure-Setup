pipeline {
    agent any

    environment {
        AWS_CREDS             = credentials('aws-creds')
        AWS_ACCESS_KEY_ID     = "${AWS_CREDS_USR}"
        AWS_SECRET_ACCESS_KEY = "${AWS_CREDS_PSW}"
        AWS_DEFAULT_REGION    = "ap-south-1"
    }

    stages {

        stage('Init') {
            steps {
                sh 'terraform init'
            }
        }

        stage('Destroy') {
            steps {
                sh 'terraform destroy -auto-approve'
            }
        }

    } // stages ending
} // pipeline ending
